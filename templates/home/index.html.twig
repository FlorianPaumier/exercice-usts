{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
    <h1 class="text-center p-4">All articles from article's table : </h1>
    <div class="text-center">
        <button type="submit" class="btn btn-outline-primary mb-4"><a href="{{ path('article_new') }}">+ Add an
                article</a></button>
    </div>
    <table class="table container">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Category</th>
            <th>Content</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.category.name }}</td>
                <td>{{ article.content }}</td>
                <td><a href="{{ path('article_show', {'id': article.id}) }}"><i class="fa faro fa-search mt-3"></i></a>
                </td>
                <td><a href="{{ path('article_edit', {'id': article.id}) }}"><i class="far faro fa-edit mt-3"></i></a>
                </td>
                <td>{{ include('article/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <p>Aucun article trouv√©.</p>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
