{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
    <h1 class="text-center p-4">All articles from article's table : </h1>
    <div class="text-center">
        <button type="submit" class="btn mb-4"><a href="{{ path('article_new') }}">+ Add an article</a></button>
    </div>
<table class="table container">
    <thead class="thead-dark">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Category</th>
        <th>Content</th>
        <th>Show</th>
        <th>Edit</th>
    </tr>
    </thead>
    <tbody>
    {% for article in articles %}
        <tr>
            <td>{{ article.id }}</td>
            <td>{{ article.title }}</td>
            <td>{{ article.category.name }}</td>
            <td>{{ article.content }}</td>
            <td><a href="{{ path('article_show', {'id': article.id}) }}">Show</a></td>
            <td><a href="{{ path('article_edit', {'id': article.id}) }}"><i class="far fa-edit btn mt-3"></i></a></td>
        </tr>
    {% else %}
        <p>Aucun article trouv√©.</p>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
