{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class="text-center p-4">Category index</h1>

    <div class="text-center">
        <button type="submit" class="btn btn-outline-primary mb-4"><a href="{{ path('category_new') }}">+ Add an
                article</a></button>
    </div>

    <table class="table container">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td><a href="{{ path('category_show', {'id': category.id}) }}"><i class="fa faro fa-search mt-3"></a>
                </td>
                <td><a href="{{ path('category_edit', {'id': category.id}) }}"><i class="far faro fa-edit mt-3"></i></a>
                </td>
                <td>{{ include('category/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
