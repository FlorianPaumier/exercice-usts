{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1 class="text-center p-4">Article</h1>

    <div class="card container text-center" style="width: 25rem;">
        <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <p class="card-text">{{ article.content }}</p>
            <strong>Tags :</strong>
            <ul>
                {% for tag in article.tags %}
                    <li><a href="{{ path('tag_show', { 'name': tag.name} ) }}">{{ tag.name }}</a></li>
                {% else %}
                    <li>No tags for this article</li>
                {% endfor %}
            </ul>
            <a href="{{ path('home_index') }}">back to list</a>

            <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
            {{ include('article/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
