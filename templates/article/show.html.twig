{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <article>
        <h1> {{article.title}} : {{article.category.name}} </h1>
        
        <div class="content">
            {{article.content | raw}}
            <img src="{{article.image}}"/>
        </div>
        <ul class="list-group">
            {% for articleTag in article.tag %}
                <li class="list-group-item">
                    {{ articleTag.name }}
                </li>
            {% endfor %}
        </ul>
    </article>
    </br>
    <a href="{{ path('update_article', {'id' : article.id}) }}"><button class="btn btn-warning"> Modifier l'article </button></a>
    </br>
{% endblock %}
